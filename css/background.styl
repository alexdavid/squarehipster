@import mixins

.background
  position: absolute
  width: 100%
  height: 100%
  z-index: -1

  .sky
    width: 100%
    height: 100%
    bg-gradient(#c5fdfe, #FFF)
    z-index: 1

  .ground
    width: 100%
    background-color: #b6a97e
    height: 10%
    bottom: 0
    position: absolute
    border-top: 1px solid darken(#b6a97e, 20)
    background-image: none !important

  .sun
    width: 100px
    height: 100px
    round-corners(50%)
    position: absolute
    top: 50px
    right: 50px
    background: yellow
    opacity: 0.7
    box-shadow(0 0 10px 3px yellow)