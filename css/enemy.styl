.enemy
  position: absolute
  width: 70px
  height: 50px
  margin: -50px -35px

  &.test
    top: 50%
    left: 50%

  bgcolor= #fff

  .head
    width: 30px
    height: 30px
    position: absolute
    background: bgcolor
    top: -15px
    left: -15px
    border: 1px solid #eee

    &:before
      content: ""
      width: 4px
      height: 6px
      position: absolute
      left: 10px
      top: 8px
      background: black

    &:after
      content: ""
      width: 3px
      height: 4px
      position: absolute
      left: 3px
      top: 9px
      background: black

  .tie
    width: 0px
    height: 0px
    border-style: solid
    border-width: 10px 5px 0 5px
    border-color: #ff0000 transparent transparent transparent
    position: absolute
    top: 17px
    left: 6px

    &:before
      content: ""
      width: 0px
      height: 0px
      border-style: solid
      border-width: 0 5px 30px 5px
      border-color: transparent transparent red transparent
      position: absolute
      top: 0
      left: -5px

  .body
    background: bgcolor
    width: 65px
    height: 40px
    border: 1px solid #eee

  .legs
    position: absolute
    background: bgcolor
    height: 10px
    bottom: 0
    width: 5px
    border-bottom: 2px solid black
    border-left: 1px solid #eee
    border-right: 1px solid #eee

    &.back
      right: 10px



